{
    // All Python settings
    "[python]": {
        "editor.formatOnPaste": false
    },
    "python.jediEnabled": false,
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.flake8Path": "flake8",
    "python.linting.flake8Args": [
        //"--max-line-length=80",
        "--ignore=E402,F841,F401,F403,E302,E305,E221,W504,E241,E272,E203, E501, E222",
    ],
    "python.pythonPath": "py",

    // --------- VSCode interactive behaviors ---------
    //
    // Terminal settings
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",

    // Editor settings
    "editor.cursorBlinking": "phase",
    "editor.formatOnSave": false,
    "editor.formatOnSaveTimeout": 90000,
    "editor.showFoldingControls": "always",
    "editor.wordWrap": "on",
    // Vim+Editor interaction settings
    "vim.useCtrlKeys": false,
    "vim.foldfix": true,

    // Fix keyboard compat issue with remapped keys, vscode, and vscodevim
    "keyboard.dispatch": "keyCode",

    // Window settings
    "window.zoomLevel": 1,

    // Workbench settings
    "workbench.colorTheme": "Cobalt2",
    "workbench.startupEditor": "none",

    // -------- VSCode noninteractive behaviors --------
    "telemetry.telemetryLevel": "off",
    // Trust enabled to true *to enable the feature*
    "security.workspace.trust.enabled": true,
    // emptyWindow false makes new windows restricted
    "security.workspace.trust.emptyWindow": false,
    // startupPrompt never will remove the workspace trust dialogs
    // the Restricted Mode icon should still be visible (bot left)
    "security.workspace.trust.startupPrompt": "never",
    // startupEditor "none" will disable the new window welcome page
}
